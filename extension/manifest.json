{
  "manifest_version": 3,
  "name": "Sudo MCP Approver",
  "version": "1.0.0",
  "description": "Approve sudo commands from MCP servers in a single unified interface",
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:9998/*",
    "ws://localhost:9998/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
